---
layout: null
lang: en
ref: feed_links
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title[page.lang] | xml_escape }}</title>
    <description>{{ site.description[page.lang] | xml_escape }}</description>
    <link>{{ site.url }}</link>
    <atom:link href="{{ site.url }}/feed_links-en.xml" rel="self" type="application/rss+xml"/>
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <generator>Jekyll v{{ jekyll.version }}</generator>
    {% assign posts=site.documents | where:"lang", page.lang  | sort: 'date' | reverse %}
    {% for post in posts %}
		{% if post.no_rss %}
		{% else %}
      <item>
				{% if post.external %}
					{% if post.type == "blerifa" %}
					<title>{{ post.title | xml_escape }}</title>
					{% elsif post.type == "slides" %}
					<title>{{ post.title | xml_escape }}, {% include date.html date=post.talk_date title='X' %}</title>
					{% elsif post.type == "old_slides" %}
					<title>{{ post.title | xml_escape }}, {% include date.html date=post.talk_date title='X' %}</title>
					{% endif %}
				{% else %}
        <title>{{ post.title | xml_escape }}</title>
				{% endif %}
        {% if post.external %}
					{% if post.type == "blerifa" %}
          <description>{{ site.data.trad['new_blerifa_post'][page.lang] }}&lt;br/&gt; &lt;br/&gt; &lt;img src="{{ site.url }}/assets/post/{{post.img}}"&gt;</description>
					{% elsif post.type == "slides"%}
					<description>{{ site.data.trad['new_slides_post'][page.lang] }}&lt;br/&gt; &lt;br/&gt; &lt;img src="{{ site.url }}/assets/post/{{post.img}}"&gt;</description>
					{% elsif post.type == "old_slides"%}
					<description>{{ site.data.trad['new_slides_post'][page.lang] }}&lt;br/&gt; &lt;br/&gt; &lt;img src="{{ site.url }}/assets/post/{{post.img}}"&gt;</description>
					{% endif %}
        {% else %}
          <description>{{ site.data.trad['new_post'][page.lang] }}&lt;br/&gt; &lt;br/&gt; &lt;img src="{{ site.url }}/assets/post/{{post.img}}"&gt;</description>
        {% endif %}
				{% assign post_date=post.date | date_to_rfc822 %}
        <pubDate>{% capture publ_date %}{% include date_publish.html date=post_date %}{% endcapture %}{{ publ_date | strip_newlines }}</pubDate>
				{% if post.external %}
					{% if post.type == "blerifa" %}
						<link>{{ post.external }}</link>
					{% elsif post.type == "old_slides" %}
						<link>{{ post.external }}</link>
					{% elsif post.type == "slides" %}
						<link>{{ site.baseurl }}/{{ post.external }}</link>
					{% endif %}
				{% else %}
        	<link>{{ post.url | prepend: site.baseurl | prepend: site.url }}</link>
				{% endif %}
				{% if post.exteral %}
					{% if post.type == "blerifa" %}
						<guid isPermaLink="true">{{ post.external }}</guid>
					{% elsif post.type == "old_slides" %}
						<guid isPermaLink="true">{{ post.external }}</guid>
					{% elsif post.type == "slides" %}
						<guid isPermaLink="true">{{ site.baseurl }}/{{ post.external }}</guid>
					{% endif %}
				{% else %}
        	<guid isPermaLink="true">{{ post.url | prepend: site.baseurl | prepend: site.url }}</guid>
				{% endif %}
        {% for tag in post.tags %}
        <category>{{ tag | xml_escape }}</category>
        {% endfor %}
      </item>
		{% endif %}
    {% endfor %}
  </channel>
</rss>
